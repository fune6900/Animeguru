<h2 class="text-2xl font-bold text-center mb-6">ログイン</h2>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- メールアドレス -->
    <div class="form-control">
      <label class="label">
        <span class="label-text"><%= f.label :email, "メールアドレス" %></span>
      </label>
      <%= f.email_field :email, class: "input input-bordered w-full", placeholder: "メールアドレスを入力してください", autofocus: true, autocomplete: "email" %>
    </div>

    <!-- パスワード -->
    <div class="form-control">
      <label class="label">
        <span class="label-text"><%= f.label :password, "パスワード" %></span>
      </label>
      <%= f.password_field :password, class: "input input-bordered w-full", placeholder: "パスワードを入力してください（6文字以上）", autocomplete: "current-password" %>
    </div>

    <!-- ログインボタン -->
    <div class="form-control mt-4">
      <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "text-blue-500 hover:underline" %>
  </div>
</div>
