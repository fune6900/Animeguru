<h2 class="text-2xl font-bold text-center mb-6">ログイン</h2>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <!-- Googleログインボタン -->
  <% if devise_mapping.omniauthable? %>
    <div class="flex flex-col items-center space-y-6">
      
      <!-- Googleログインボタン -->
      <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "rounded-md overflow-hidden transition transform hover:scale-105" do %>
        <%= image_tag("sign_in_with_google.png", alt: "Googleでログイン", class: "w-[200px] h-[44px]") %>
      <% end %>

      <!-- 区切り線 -->
      <div class="flex items-center w-full max-w-xs">
        <div class="flex-grow border-t border-gray-600"></div>
        <span class="mx-4 text-gray-600 text-sm">OR</span>
        <div class="flex-grow border-t border-gray-600"></div>
      </div>

    </div>
  <% end %>

  <!-- メールアドレスとパスワードでのログイン -->
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>

    <!-- メールアドレス -->
    <div class="mt-4">
      <label class="block text-gray-700 font-semibold mb-1"> メールアドレス <span class="text-red-500">*</span></label>
      <%= f.email_field :email, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "メールアドレスを入力してください", autofocus: true, autocomplete: "email" %>
    </div>

    <!-- パスワード -->
    <div class="mt-4">
      <label class="block text-gray-700 font-semibold mb-1">パスワード <span class="text-red-500">*</span></label>
      <%= f.password_field :password, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "パスワードを入力してください（6文字以上）", autocomplete: "current-password" %>
    </div>

    <!-- ログインボタン -->
    <div class="form-control mt-4">
      <%= f.submit "ログイン", class: "btn bg-primary text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-200 w-full" %>
    </div>
  <% end %>

  <!-- 新規登録へのリンク -->
  <div class="text-center mt-4">
    <%= link_to "アカウント登録はこちら", new_registration_path(resource_name), class: "btn bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-6 shadow-md transition duration-200 w-full" %>
  </div>

  <!-- パスワードを忘れた場合のリンク -->
  <div class="text-center mt-4">
    <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "text-sm text-gray-600 link link-hover hover:text-blue-500" %>
  </div>
</div>
