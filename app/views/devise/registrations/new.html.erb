<h2 class="text-2xl font-bold text-center mb-6">アカウント登録</h2>

  <!-- エラーメッセージを表示 -->
  <%= render "shared/error_messages", resource: resource %>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <%= form_for(resource || User.new, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>

    <!-- 🔹 ユーザー名 -->
    <div class="mt-4">
      <label class="block text-gray-700 font-semibold mb-1">ユーザー名 <span class="text-red-500">*</span></label>
      <%= f.text_field :username, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "ユーザー名を入力してください（3文字以上）" %>
    </div>

    <!-- メールアドレス -->
    <div class="mt-4">
      <label class="block text-gray-700 font-semibold mb-1">メールアドレス <span class="text-red-500">*</span></label>
      <%= f.email_field :email, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "メールアドレスを入力してください", autofocus: true, autocomplete: "email" %>
    </div>

    <!-- パスワード -->
    <div class="mt-4">
      <label class="block text-gray-700 font-semibold mb-1">パスワード <span class="text-red-500">*</span></label>
      <%= f.password_field :password, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "パスワードを入力してください（6文字以上）", autocomplete: "new-password" %>
    </div>

    <!-- パスワード確認 -->
    <div class="form-control">
      <label class="block text-gray-700 font-semibold mb-1">パスワード確認 <span class="text-red-500">*</span></label>
      <%= f.password_field :password_confirmation, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "パスワードを再入力してください", autocomplete: "new-password" %>
    </div>

    <!-- 登録ボタン -->
    <div class="form-control mt-4 flex justify-center">
      <%= f.submit "アカウントを作成", class: "btn bg-primary text-white py-2 px-6 shadow-md transition duration-200 w-full" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
  <%= link_to "ログインはこちら", new_session_path(resource_name), class: "btn bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-6 shadow-md transition duration-200 w-full" %>
  </div>
</div>
