<h2 class="text-2xl font-bold text-center mb-6">新規登録</h2>

  <!-- エラーメッセージを表示 -->
  <%= render "shared/error_messages", resource: resource %>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <%= form_for(resource || User.new, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>

    <!-- ユーザー名 -->
    <div class="form-control">
      <label class="label">
        <span class="label-text"><%= f.label :username, "ユーザー名" %></span>
      </label>
      <%= f.text_field :username, class: "input input-bordered w-full", placeholder: "ユーザー名を入力してください（3文字以上）" %>
    </div>

    <!-- メールアドレス -->
    <div class="form-control">
      <label class="label">
        <span class="label-text"><%= f.label :email, "メールアドレス" %></span>
      </label>
      <%= f.email_field :email, class: "input input-bordered w-full", placeholder: "メールアドレスを入力してください", autofocus: true, autocomplete: "email" %>
    </div>

    <!-- パスワード -->
    <div class="form-control">
      <label class="label">
        <span class="label-text"><%= f.label :password, "パスワード" %></span>
      </label>
      <%= f.password_field :password, class: "input input-bordered w-full", placeholder: "パスワードを入力してください（6文字以上）", autocomplete: "new-password" %>
    </div>

    <!-- パスワード確認 -->
    <div class="form-control">
      <label class="label">
        <span class="label-text"><%= f.label :password_confirmation, "パスワード確認" %></span>
      </label>
      <%= f.password_field :password_confirmation, class: "input input-bordered w-full", placeholder: "パスワードを再入力してください", autocomplete: "new-password" %>
    </div>

    <!-- 登録ボタン -->
    <div class="form-control mt-4 flex justify-center">
      <%= f.submit "新規登録", class: "btn bg-primary text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-200 w-auto" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
  <%= link_to "ログインはこちら", new_session_path(resource_name), class: "text-blue-500 hover:underline" %>
  </div>
</div>
