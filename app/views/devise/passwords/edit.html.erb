<% content_for(:title, t(".title")) %>

<!-- 全体を囲うセクションに余白を追加 -->
<section class="px-4 py-12 sm:px-6 lg:px-8">
  <h2 class="text-2xl sm:text-3xl font-bold text-center mb-6 text-gray-800">パスワード再設定</h2>

  <!-- エラーメッセージ -->
  <%= render "shared/error_messages", resource: resource %>

  <div class="max-w-md w-full mx-auto bg-white p-4 sm:p-6 rounded-lg shadow-md">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>

      <!-- パスワード -->
      <div>
        <label class="block text-gray-700 font-semibold mb-1">パスワード <span class="text-red-500">*</span></label>
        <%= f.password_field :password,
              class:"w-full p-3 border border-gray-300 rounded-md shadow-sm",
              placeholder: "パスワードを入力してください（6文字以上）",
              autofocus: true, autocomplete: "new-password" %>
      </div>

      <!-- パスワード確認 -->
      <div>
        <label class="block text-gray-700 font-semibold mb-1">パスワード確認 <span class="text-red-500">*</span></label>
        <%= f.password_field :password_confirmation,
              class:"w-full p-3 border border-gray-300 rounded-md shadow-sm",
              placeholder: "パスワードを再入力してください",
              autocomplete: "new-password" %>
      </div>

      <!-- リセットトークン -->
      <%= f.hidden_field :reset_password_token %>

      <!-- 送信ボタン -->
      <div class="form-control mt-6">
        <%= f.submit "パスワード再設定", class: "btn bg-primary text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-200 w-full", data: { action: "click->loading#show" } %>
      </div>
    <% end %>
  </div>
</section>
