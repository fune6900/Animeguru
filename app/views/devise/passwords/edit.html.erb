<% content_for(:title, t(".title")) %>
<h2 class="text-2xl font-bold text-center mb-6">パスワード再設定</h2>

<!-- エラーメッセージを表示 -->
<%= render "shared/error_messages", resource: resource %>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

    <!-- 新しいパスワード -->
    <div class="mt-4">
      <label class="block text-gray-700 font-semibold mb-1">パスワード <span class="text-red-500">*</span></label>
      <%= f.password_field :password, class:"w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "パスワードを入力してください（6文字以上）", autofocus: true, autocomplete: "new-password" %>
    </div>

    <!-- パスワード確認 -->
    <div class="mt-4">
      <label class="block text-gray-700 font-semibold mb-1">パスワード確認<span class="text-red-500">*</span></label>
      <%= f.password_field :password_confirmation, class:"w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "パスワードを再入力してください", autocomplete: "new-password" %>
    </div>

    <!-- リセット用トークン（hidden field） -->
    <%= f.hidden_field :reset_password_token %>

    <!-- パスワード変更ボタン -->
    <div class="text-center mt-4">
      <%= f.submit "パスワード再設定", class: "btn bg-primary text-white py-2 px-6 shadow-md transition duration-200 w-full" %>
    </div>
  <% end %>
</div>
