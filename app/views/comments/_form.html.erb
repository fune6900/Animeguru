<% if user_signed_in? %>
  <div id="comment_form" class="w-full max-w-2xl mx-auto px-4">
    <%= form_with model: [seichi_memo, comment], local: true, class: "flex flex-col space-y-2" do |f| %>

      <div class="bg-gray-100 rounded shadow-sm">
        <%= f.text_area :content,
              placeholder: "コメントする",
              rows: 3,
              class: "w-full bg-transparent text-sm border-none focus:outline-none px-3 py-2 resize-none" %>
      </div>

      <div class="text-right">
        <%= f.submit "コメント",
              class: "btn bg-primary text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-200 max-w-xs" %>
      </div>

    <% end %>
  </div>
<% else %>
  <div class="text-center mb-4 p-4 border rounded-md text-gray-700 max-w-2xl mx-auto px-4">
    コメントを投稿するには
    <%= link_to "ログイン", new_user_session_path, class: "underline hover:text-primary" %>
    が必要です。
  </div>
<% end %>
