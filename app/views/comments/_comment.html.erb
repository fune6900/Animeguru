<div class="space-y-2 mb-4 text-sm text-gray-700">
  <% if comments.any? %>
    <% comments.each do |comment| %>
      <div class="flex items-center mb-2">
        <i class="fas fa-user-circle text-gray-500 w-6 h-6 text-xl mr-2"></i>
        <span><%= comment.content %></span>
      </div>
    <% end %>
  <% end %>
</div>
