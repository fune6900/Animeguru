<div id="comments" class="space-y-2 mb-4">
  <% if comments.any? %>
    <% comments.each do |comment| %>
      <div class="flex items-start space-x-3">
        <%= link_to (comment.user == current_user ? profile_path : user_path(comment.user)) do %>
          <%= image_tag comment.user.profile_image.url, alt: comment.user.username, class: "w-10 h-10 rounded-full mt-1" %>
        <% end %>
        <div class="flex flex-col">
          <div class="flex items-center mb-1">
            <span class="text-xs font-semibold text-gray-800"><%= comment.user.username %></span>
            <span class="text-gray-500 text-xs ml-2"><%= time_ago_in_words(comment.created_at) %>Ââç</span>
          </div>
          <p class="text-sm text-gray-700"><%= comment.content %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
