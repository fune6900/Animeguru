<script>
// ğŸ”¹ åœ°å›³ã¨ç¾åœ¨åœ°ãƒãƒ¼ã‚«ãƒ¼ã‚’æ‰±ã†å¤‰æ•°ã‚’å®£è¨€
let map, marker;

// ğŸ”¹ æƒ…å ±è¡¨ç¤ºç”¨DOMã®å–å¾—ï¼ˆä½¿ç”¨ã—ãªã„å ´åˆã¯å‰Šé™¤OKï¼‰
const latlngDis = document.getElementById('latlngDisplay');
const addressDis = document.getElementById('addressDisplay');

// ğŸ”¹ ã‚«ã‚¹ã‚¿ãƒ ãƒãƒ¼ã‚«ãƒ¼ã‚¢ã‚¤ã‚³ãƒ³
const iconImage = 'https://maps.google.com/mapfiles/ms/micons/yellow-dot.png';
const currentLocation = 'https://www.google.com/mapfiles/marker.png';

// ğŸ”¹ Google Maps APIãŒå‘¼ã³å‡ºã™ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯é–¢æ•°ï¼ˆã‚°ãƒ­ãƒ¼ãƒãƒ«ã‚¹ã‚³ãƒ¼ãƒ—ã«ç™»éŒ²ï¼‰
window.initMap = function() {
  // ğŸ”¹ åœ°å›³ã®åˆæœŸè¨­å®š
  map = new google.maps.Map(document.getElementById('map'), {
    zoom: 12,
    gestureHandling: 'greedy',
    center: { lat: 35.6803997, lng: 139.7690174 } // æ±äº¬é§…ã‚’åˆæœŸä¸­å¿ƒã«
  });

  // ğŸ”¹ æ¤œç´¢ãƒœãƒƒã‚¯ã‚¹ã®è¨­å®š
  const input = document.getElementById("pac-input");
  const searchBox = new google.maps.places.SearchBox(input);

  // ğŸ”¹ ç¾åœ¨åœ°ãƒœã‚¿ãƒ³ã®ã‚¤ãƒ™ãƒ³ãƒˆç™»éŒ²
  document.getElementById('current-location-btn').addEventListener('click', showCurrentLocation);

  // ğŸ”¹ åœ°å›³ãŒç§»å‹•ã—ãŸæ™‚ã«æ¤œç´¢ç¯„å›²ã‚’æ›´æ–°
  map.addListener("bounds_changed", () => {
    searchBox.setBounds(map.getBounds());
  });

  // ğŸ”¹ æ¤œç´¢ã§è¡¨ç¤ºã•ã‚Œã‚‹ãƒãƒ¼ã‚«ãƒ¼ã‚’ä¸€æ™‚çš„ã«ä¿å­˜
  let markers = [];

  // ğŸ”¹ æ¤œç´¢å€™è£œã‹ã‚‰å ´æ‰€ãŒé¸ã°ã‚ŒãŸã¨ãã®å‡¦ç†
  searchBox.addEventListener("places_changed", () => {
    const places = searchBox.getPlaces();
    if (places.length === 0) return;

    // ğŸ”¹ æ—¢å­˜ãƒãƒ¼ã‚«ãƒ¼ã‚’å‰Šé™¤
    markers.forEach((marker) => marker.setMap(null));
    markers = [];

    // ğŸ”¹ æ–°ã—ã„å€™è£œã«åˆã‚ã›ã¦åœ°å›³ã®ç¯„å›²ã‚’æ›´æ–°
    const bounds = new google.maps.LatLngBounds();
    places.forEach((place) => {
      if (!place.geometry || !place.geometry.location) return;
      place.geometry.viewport ? bounds.union(place.geometry.viewport) : bounds.extend(place.geometry.location);
    });
    map.fitBounds(bounds);
  });

  // ğŸ”¹ åˆæœŸçŠ¶æ…‹ã§ç¾åœ¨åœ°ã‚’è¡¨ç¤º
  showCurrentLocation();

  // ğŸ”¹ è–åœ°ãƒ¡ãƒ¢ã«å¯¾å¿œã™ã‚‹ãƒãƒ¼ã‚«ãƒ¼ãƒ”ãƒ³ã‚’ç«‹ã¦ã‚‹
  setMemoMarkers();

  // ğŸ”¹ ãƒ¢ãƒ¼ãƒ€ãƒ«å¤–ã‚’ã‚¯ãƒªãƒƒã‚¯ã—ãŸã¨ãã«é–‰ã˜ã‚‹
  document.addEventListener('click', function(event) {
    const modal = document.getElementById('post_modal');
    if (event.target === modal) {
      modal.close();
    }
  });
};

// ğŸ”¹ ç¾åœ¨åœ°ã‚’å–å¾—ã—ã¦åœ°å›³ã‚’ç§»å‹•ã€ãƒ”ãƒ³ã‚’è¡¨ç¤º
function showCurrentLocation(){
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(function(position) {
      const userLocation = {
        lat: position.coords.latitude,
        lng: position.coords.longitude
      };
      map.setCenter(userLocation);

      if (marker) marker.setMap(null);

      marker = new google.maps.Marker({
        position: userLocation,
        map: map,
        icon: currentLocation
      });

      if (latlngDis) latlngDis.innerHTML = `Latitude: ${userLocation.lat}, Longitude: ${userLocation.lng}`;
    }, function() {
      alert('ä½ç½®æƒ…å ±ã®å–å¾—ã«å¤±æ•—ã—ã¾ã—ãŸã€‚');
    });
  } else {
    alert('ãŠä½¿ã„ã®ãƒ–ãƒ©ã‚¦ã‚¶ã§ã¯åœ°ç†ä½ç½®æƒ…å ±ã®å–å¾—ãŒã‚µãƒãƒ¼ãƒˆã•ã‚Œã¦ã„ã¾ã›ã‚“ã€‚');
  }
}

// ğŸ”¹ å„è–åœ°ãƒ¡ãƒ¢ã«å¯¾å¿œã™ã‚‹ãƒãƒ¼ã‚«ãƒ¼ã‚’åœ°å›³ã«é…ç½®ã—ã€ãƒ¢ãƒ¼ãƒ€ãƒ«ã§è©³ç´°è¡¨ç¤º
function setMemoMarkers() {
  <% @seichi_memos.each do |memo| %>
    (() => {
      const marker = new google.maps.Marker({
        position: { lat: <%= memo.place.latitude %>, lng: <%= memo.place.longitude %> },
        map: map,
        title: "<%= j memo.title %>",
        icon: iconImage
      });

      marker.addListener('click', function() {
        const modalContent = `
