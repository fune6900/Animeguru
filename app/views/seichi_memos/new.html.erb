<h2 class="text-2xl font-bold text-center mb-6">新規投稿</h2>

<div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-md">
  <%= form_with model: @seichi_memo_form, url: seichi_memos_path, method: :post, local: true, class: "space-y-4" do |f| %>
    <%= render "shared/error_messages", resource: @seichi_memo_form %>

    <!-- タイトル -->
    <div class="form-control">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: "input input-bordered w-full" %>
    </div>

    <!-- 本文 -->
    <div class="form-control">
      <%= f.label :body, "本文" %>
      <%= f.text_area :body, class: "textarea textarea-bordered w-full" %>
    </div>

    <!-- アニメ情報 -->
    <div class="form-control">
      <%= f.label :anime_title, "アニメ作品名" %>
      <%= f.text_field :anime_title, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :anime_official_site_url, "公式サイトURL" %>
      <%= f.text_field :anime_official_site_url, class: "input input-bordered w-full" %>
    </div>

    <!-- 聖地情報 -->
    <div class="form-control">
      <%= f.label :place_name, "聖地名" %>
      <%= f.text_field :place_name, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :place_address, "住所" %>
      <%= f.text_field :place_address, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :place_postal_code, "郵便番号" %>
      <%= f.text_field :place_postal_code, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mt-4">
      <%= f.submit "投稿する", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
