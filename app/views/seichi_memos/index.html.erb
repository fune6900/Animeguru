<% content_for(:title, t(".title")) %>

<!-- 検索フォーム -->
<%= render "seichi_memos/search_form", search_url: seichi_memos_path %>

<!-- #アニめぐる 投稿リンクボタン -->
<div class="flex justify-center mt-4">
  <%= link_to "https://x.com/hashtag/アニめぐる?src=hashtag_click&f=live",
              target: '_blank',
              rel: 'noopener noreferrer',
              class: "btn bg-primary text-white py-2 px-6 shadow-md transition duration-200 w-full max-w-xs",
              "aria-label": "聖地メモの投稿を見る" do %>
    <i class="fab fa-x-twitter text-white text-2xl mr-2"></i>
    <span>聖地メモの投稿を見る</span>
  <% end %>
</div>

<!-- 聖地メモ一覧 -->
<div class="mb-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
    <!-- 聖地メモ件数表示 -->
    <h3 class="text-xl sm:text-2xl font-semibold text-gray-800 mb-6 border-b pb-2 border-l-4 border-primary pl-4 flex items-center justify-between">
      <span>みんなの聖地メモ</span>
      <span class="text-sm sm:text-base text-gray-500">（<%= @seichi_memos.total_count %>件）</span>
    </h3>
    <% if @seichi_memos.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% @seichi_memos.each do |seichi_memo| %>
          <%= render "seichi_memos/seichi_memo", seichi_memo: seichi_memo %>
        <% end %>
      </div>
    <% else %>
      <div class="flex justify-center items-center w-full py-10">
        <p class="text-gray-600 text-xl font-bold text-center">聖地メモはありません。</p>
      </div>
    <% end %>
  </div>

  <!-- ページネーション -->
  <div class="flex justify-center mt-4">
    <%= paginate @seichi_memos %>
  </div>
</div>