<%= form_with model: @seichi_memo_form, 
              url: @seichi_memo_form.persisted? ? seichi_memo_path(@seichi_memo) : seichi_memos_path, 
              method: @seichi_memo_form.persisted? ? :patch : :post, 
              local: true, class: "space-y-4",
              data: { controller: "step-form anime-search seichi-search", step_form_target: "form" } do |f| %>

  <!-- エラーメッセージを表示 -->
  <div id="form-errors" class="hidden"></div>
  <%= render "shared/error_messages", resource: @seichi_memo_form %>

  <!-- 🔹 ステップ 1: 巡礼記録 -->
  <div data-step-form-target="step">
    <%= render "seichi_memos/memo", f: f %>
  </div>

  <!-- 🔹 ステップ 2: 聖地の基本情報 -->
  <div data-step-form-target="step" style="display:none;">
    <%= render "seichi_memos/place", f: f %>
  </div>

  <!-- 🔹 ステップ 3: 作品の基本情報 -->
  <div data-step-form-target="step" style="display:none;">
    <%= render "seichi_memos/anime", f: f %>
  </div>

  <!-- 🔹 ステップ 4: 確認画面 -->
  <div data-step-form-target="step" style="display:none;">
    <%= render "seichi_memos/confirm", f: f %>
  </div>
<% end %>
