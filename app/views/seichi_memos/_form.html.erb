<%= form_with model: @seichi_memo_form, 
              url: @seichi_memo_form.persisted? ? seichi_memo_path(@seichi_memo) : seichi_memos_path, 
              method: @seichi_memo_form.persisted? ? :patch : :post, 
              local: true, class: "space-y-4" do |f| %>

  <!-- 🔹 巡礼記録 -->
  <div class="border-b p-4">
    <h2 class="text-xl font-bold">巡礼記録</h2>
    <div class="mt-4">
      <label class="block text-gray-700">タイトル <span class="text-red-500">（必須）</span></label>
      <%= f.text_field :title, class: "w-full p-2 border rounded-md", placeholder: "巡礼記録のタイトルを入力してください" %>
    </div>
    <div class="mt-2">
      <label class="block text-gray-700">メモ <span class="text-red-500">（必須）</span></label>
      <%= f.text_area :body, class: "w-full p-2 border rounded-md h-32", placeholder: "シーンの解説や撮影スポットの詳細、ベストな訪問時間など" %>
    </div>

    <!-- 🔹 画像アップロード -->
    <div class="mt-4">
      <!-- 📸 聖地の写真 -->
      <div class="mt-4">
        <label class="block text-gray-700">聖地の写真 <span class="text-gray-500">（任意）</span></label>
        <%= f.file_field :seichi_photo, class: "w-full p-2 border rounded-md" %>
      </div>

      <!-- 🎞 アニメのシーン画像 -->
      <div class="mt-4">
        <label class="block text-gray-700">聖地が登場したシーン画像 <span class="text-gray-500">（任意）</span></label>
        <%= f.file_field :scene_image, class: "w-full p-2 border rounded-md" %>
      </div>
    </div>
  </div>

  <!-- 🔹 聖地の基本情報 -->
  <div class="border-b p-4">
    <h2 class="text-xl font-bold">聖地の基本情報</h2>
    <div class="mt-4">
      <label class="block text-gray-700">聖地名 <span class="text-red-500">（必須）</span></label>
      <%= f.text_field :place_name, class: "w-full p-2 border rounded-md", placeholder: "聖地の名前を入力してください" %>
    </div>
    <div class="mt-2">
      <label class="block text-gray-700">住所 <span class="text-gray-500">（任意）</span></label>
      <%= f.text_field :place_address, class: "w-full p-2 border rounded-md", placeholder: "住所を入力してください" %>
    </div>
    <div class="mt-2">
      <label class="block text-gray-700">郵便番号 <span class="text-gray-500">（任意）</span></label>
      <%= f.text_field :place_postal_code, class: "w-full p-2 border rounded-md", placeholder: "例: 101-0021" %>
    </div>
  </div>

  <!-- 🔹 作品の基本情報 -->
  <div class="p-4">
    <h2 class="text-xl font-bold">作品の基本情報</h2>
    <div class="mt-4">
      <label class="block text-gray-700">作品タイトル <span class="text-red-500">（必須）</span></label>
      <%= f.text_field :anime_title, class: "w-full p-2 border rounded-md", placeholder: "作品のタイトルを入力してください" %>
    </div>
    <div class="mt-2">
      <label class="block text-gray-700">公式サイト <span class="text-gray-500">（任意）</span></label>
      <%= f.text_field :anime_official_site_url, class: "w-full p-2 border rounded-md", placeholder: "例: https://www.example-anime.jp/" %>
    </div>
    <!-- 🎥 作品イメージ -->
    <div class="mt-4">
      <label class="block text-gray-700">作品イメージ <span class="text-gray-500">（任意）</span></label>
      <%= f.file_field :image_url, class: "w-full p-2 border rounded-md" %>
    </div>
  </div>

  <!-- 送信ボタンと戻るボタン -->
  <div class="text-center flex justify-center space-x-4">
    <%= link_to "戻る", "javascript:history.back();", class: "btn btn-primary w-32" %>

    <%= f.submit @seichi_memo_form.persisted? ? "更新する" : "投稿する", class: "btn btn-primary w-32" %>
  </div>
<% end %>
