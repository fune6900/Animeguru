<div class="p-4">
  <!-- 🔹 ステップのタイトルと進捗バー -->
  <div class="mb-4">
    <h2 class="text-xl font-bold">ステップ 3/4: 作品の基本情報</h2>
    <div class="w-full bg-gray-200 rounded-full h-2.5">
      <div class="bg-primary h-2.5 rounded-full" style="width: 75%"></div>
    </div>
  </div>

  <!-- 🔹 作品タイトル -->
  <div class="mt-4">
    <label class="block text-gray-700 font-semibold mb-1">作品タイトル <span class="text-red-500">*</span></label>
    <%= f.text_field :anime_title, class: "w-full p-2 border rounded-md", placeholder: "作品のタイトルを入力してください", data: { anime_search_target: "title" } %>
  </div>

  <!-- 🔹 作品タイトルから公式サイトを取得するボタン -->
  <button type="button" class="btn bg-primary text-white py-2 px-6 shadow-md transition duration-200 w-auto mt-2" data-action="click->anime-search#search">
    作品タイトルから公式サイトを取得
  </button>

  <!-- 🔹 公式サイト -->
  <div class="mt-2">
    <label class="block text-gray-700 font-semibold mb-1">公式サイト</label>
    <%= f.text_field :anime_official_site_url, class: "w-full p-2 border rounded-md", placeholder: "例: https://www.example-anime.jp/", data: { anime_search_target: "site" } %>
  </div>

  <!-- 🔹 作品イメージ -->
  <div class="mt-4">
    <label class="block text-gray-700 font-semibold mb-1">作品イメージ</label>
    <%= f.file_field :image_url, class: "btn w-full p-2 border cursor-pointer shadow-sm" %>
  </div>

  <!-- 🔹 作品ジャンル -->
  <div class="mt-4">
    <label class="block text-gray-700 font-semibold mb-1">作品ジャンル（最大3つまで）</label>
    <div class="grid grid-cols-5 gap-2">
      <% GenreTag.all.each do |genre_tag| %>
        <label class="inline-flex items-center">
          <%= check_box_tag "seichi_memo_form[genre_tag_ids][]", genre_tag.id, f.object.genre_tag_ids&.include?(genre_tag.id), class: "mr-2" %>
          <span><%= genre_tag.name %></span>
        </label>
      <% end %>
    </div>
  </div>

  <!-- 🔹 ステップボタン -->
  <div class="flex justify-center mt-6 space-x-4">
    <button type="button" class="btn bg-primary text-white py-2 px-6 shadow-md transition duration-200 w-auto mt-2" data-action="click->step-form#prev">前のステップへ</button>
    <button type="button" class="btn bg-primary text-white py-2 px-6 shadow-md transition duration-200 w-auto mt-2" data-action="click->step-form#next">確認画面へ</button>
  </div>
</div>
