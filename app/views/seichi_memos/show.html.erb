<div class="max-w-3xl mx-auto p-6 bg-white shadow-lg rounded-lg">
  <!-- сѓ┐сѓцсЃѕсЃФ & уиежЏєсЃ╗тЅіжЎцсЃюсѓ┐сЃ│ -->
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold"><%= @seichi_memo.title %></h1>

    <% if current_user == @seichi_memo.user %>
      <div class="flex space-x-2">
        <%= link_to "уиежЏє", edit_seichi_memo_path(@seichi_memo), class: "btn btn-primary w-50" %>
        <%= link_to "тЅіжЎц", seichi_memo_path(@seichi_memo), data: { turbo_method: :delete, turbo_confirm: 'ТюгтйЊсЂФтЅіжЎцсЂЌсЂЙсЂЎсЂІ№╝Ъ' }, class: "btn btn-primary w-50" %>
      </div>
    <% end %>
  </div>

	<!-- сЃдсЃ╝сѓХсЃ╝тљЇ & ТіЋуе┐ТЌЦТЎѓ -->
  <div class="p-4">
    <div class="text-black-500 text-sm">
      <strong>ТіЋуе┐УђЁ:</strong> <%= @seichi_memo.user.username %>
    </div>
    <div class="text-black-500 text-sm">
      <strong>ТіЋуе┐ТЌЦ:</strong> <%= @seichi_memo.created_at.strftime("%Yт╣┤%mТюѕ%dТЌЦ") %>
    </div>
  </div>

  <!-- ­Ъћ╣ УЂќтю░сЂ«тєЎуюЪ & сѓбсЃІсЃАсЂ«сѓисЃ╝сЃ│ -->
  <div class="flex space-x-4 mb-4">
    <!-- сѓбсЃІсЃАсЂ«сѓисЃ╝сЃ│ -->
    <div class="w-1/2 h-60">
      <%= image_tag (@seichi_memo.scene_image.present? ? @seichi_memo.scene_image.url : SceneImageUploader.new.default_url), 
        alt: "сѓбсЃІсЃАсЂ«сѓисЃ╝сЃ│", 
        class: "rounded-lg shadow-md w-full h-full object-cover" %>
    </div>

    <!-- УЂќтю░сЂ«т«ЪжџЏсЂ«тєЎуюЪ -->
    <div class="w-1/2 h-60">
      <%= image_tag (@seichi_memo.seichi_photo.present? ? @seichi_memo.seichi_photo.url : SeichiPhotoUploader.new.default_url), 
        alt: "УЂќтю░сЂ«тєЎуюЪ", 
        class: "rounded-lg shadow-md w-full h-full object-cover" %>
    </div>
  </div>

  <!-- УЂќтю░сЃАсЃбсЂ«ТюгТќЄ -->
	<div class="p-4">
	  <h2 class="text-lg font-bold">сЃАсЃб</h2>
    <p class="text-gray-700"><%= simple_format(@seichi_memo.body) %></p>
	</div>

  <!-- УЂќтю░сЂ«ТЃЁта▒ -->
  <div class="border-t border-gray-300 p-4">
    <h2 class="text-lg font-bold">УЂќтю░ТЃЁта▒</h2>
    <p class="text-gray-700"><strong>УЂќтю░тљЇ:</strong> <%= @seichi_memo.place.name %></p>
    <p class="text-gray-700"><strong>СйЈТЅђ:</strong> <%= @seichi_memo.place.address.presence || "ТЃЁта▒сЂфсЂЌ" %></p>
    <p class="text-gray-700"><strong>жЃхСЙ┐уЋфтЈи:</strong> <%= @seichi_memo.place.postal_code.presence || "ТЃЁта▒сЂфсЂЌ" %></p>
  </div>

  <!-- СйютЊЂТЃЁта▒ -->
  <div class="border-t border-gray-300 p-4">
    <h2 class="text-lg font-bold">СйютЊЂТЃЁта▒</h2>
    <p class="text-gray-700"><strong>СйютЊЂтљЇ:</strong> <%= @seichi_memo.anime.title %></p>
    <% if @seichi_memo.anime.official_site_url.present? %>
      <p class="text-blue-500 flex items-center space-x-1">
        <a href="<%= @seichi_memo.anime.official_site_url %>" target="_blank" class="hover:underline flex items-center">
          тЁгт╝ЈсѓхсѓцсЃѕ
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.293 3.293a1 1 0 011.414 0L18 7.586a1 1 0 010 1.414l-5.293 5.293a1 1 0 01-1.414-1.414L15.586 9H7a1 1 0 110-2h8.586L12.293 4.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </a>
      </p>
    <% else %>
      <p class="text-gray-700">тЁгт╝ЈсѓхсѓцсЃѕТЃЁта▒сЂфсЂЌ</p>
    <% end %>
    <div class="mt-4 flex justify-center">
      <%= image_tag (@seichi_memo.anime.image_url.present? ? @seichi_memo.anime.image_url.url : AnimeImageUploader.new.default_url), 
        alt: "СйютЊЂсѓцсЃАсЃ╝сѓИ", 
        class: "rounded-lg shadow-md w-2/3 object-cover" %>
    </div>
  </div>

  <!-- сѓ│сЃАсЃ│сЃѕсѓ╗сѓ»сѓисЃДсЃ│ -->
  <div class="border-t border-gray-300 p-4">
    <!-- сѓ│сЃАсЃ│сЃѕС╗ХТЋ░УАеуц║ -->
    <h2 class="text-base text-black font-semibold mb-3"><%= @comments.count %>С╗ХсЂ«сѓ│сЃАсЃ│сЃѕ</h2>

    <!-- сѓ│сЃАсЃ│сЃѕсЃЋсѓЕсЃ╝сЃа -->
    <%= render partial: "comments/form", locals: { seichi_memo: @seichi_memo, comment: @comment } %>

    <!-- сѓ│сЃАсЃ│сЃѕСИђУдД -->
    <%= render partial: "comments/comment", locals: { comments: @comments } %>
  </div>

  <!-- Тѕ╗сѓІсЃюсѓ┐сЃ│ -->
  <div class="mt-6 text-center">
    <%= link_to "сЂ┐сѓЊсЂфсЂ«ТіЋуе┐сЂФТѕ╗сѓІ", seichi_memos_path, class: "btn btn-primary w-50" %>
  </div>
</div>
