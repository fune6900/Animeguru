<div class="max-w-3xl mx-auto p-6 bg-white shadow-lg rounded-lg">
  <!-- сѓ┐сѓцсЃѕсЃФ & уиежЏєсЃ╗тЅіжЎцсЃюсѓ┐сЃ│ -->
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold"><%= @seichi_memo.title %></h1>

    <% if current_user == @seichi_memo.user %>
      <div class="flex space-x-2">
        <%= link_to edit_seichi_memo_path(@seichi_memo), class: "btn bg-primary text-white flex items-center space-x-1" do %>
          <i class="fas fa-pen"></i>
          <span>уиежЏє</span>
        <% end %>

        <%= link_to seichi_memo_path(@seichi_memo),
                    data: { turbo_method: :delete, turbo_confirm: 'ТюгтйЊсЂФтЅіжЎцсЂЌсЂЙсЂЎсЂІ№╝Ъ' },
                    class: "btn bg-primary text-white flex items-center space-x-1" do %>
          <i class="fas fa-trash-alt"></i>
          <span>тЅіжЎц</span>
        <% end %>
      </div>
    <% end %>
  </div>

	<!-- сЃдсЃ╝сѓХсЃ╝ТЃЁта▒сѓесЃфсѓб -->
  <div class="flex items-center justify-between px-2 py-2 mt-4">
    <!-- тид№╝џућ╗тЃЈ№╝ІсЃдсЃ╝сѓХсЃ╝тљЇ -->
    <div class="flex items-center space-x-2">
      <%= link_to (@seichi_memo.user == current_user ? profile_path : user_path(@seichi_memo.user)) do %>
        <%= image_tag @seichi_memo.user.profile_image.url, alt: @seichi_memo.user.username, class: "w-10 h-10 rounded-full" %>
      <% end %>
      <span class="text-sm text-gray-800 font-semibold"><%= @seichi_memo.user.username %></span>
    </div>

    <!-- ТіЋуе┐ТЌЦ -->
    <div class="text-sm text-gray-500">
      <%= @seichi_memo.created_at.strftime("%Yт╣┤%mТюѕ%dТЌЦ") %>
    </div>
  </div>

  <!-- ­Ъћ╣ УЂќтю░сЂ«тєЎуюЪ & сѓбсЃІсЃАсЂ«сѓисЃ╝сЃ│ -->
  <div class="flex space-x-4 mb-4">
    <!-- сѓбсЃІсЃАсЂ«сѓисЃ╝сЃ│ -->
    <div class="w-1/2 h-60">
      <%= image_tag (@seichi_memo.scene_image.present? ? @seichi_memo.scene_image.url : SceneImageUploader.new.default_url), 
        alt: "сѓбсЃІсЃАсЂ«сѓисЃ╝сЃ│", 
        class: "rounded-lg shadow-md w-full h-full object-cover" %>
    </div>

    <!-- УЂќтю░сЂ«т«ЪжџЏсЂ«тєЎуюЪ -->
    <div class="w-1/2 h-60">
      <%= image_tag (@seichi_memo.seichi_photo.present? ? @seichi_memo.seichi_photo.url : SeichiPhotoUploader.new.default_url), 
        alt: "УЂќтю░сЂ«тєЎуюЪ", 
        class: "rounded-lg shadow-md w-full h-full object-cover" %>
    </div>
  </div>

  <!-- сѓбсѓ»сѓисЃДсЃ│сЃюсѓ┐сЃ│(сЃќсЃЃсѓ»сЃъсЃ╝сѓ»сђЂсЂёсЂёсЂГ) -->
  <div class="flex items-center justify-between mb-2 px-4">
    <%= render 'likes/like_buttons', seichi_memo: @seichi_memo %>
    <%= render 'bookmarks/bookmark_buttons', seichi_memo: @seichi_memo %>
  </div>

  <!-- УЂќтю░сЃАсЃбсЂ«ТюгТќЄ -->
	<div class="p-4">
	  <h2 class="text-lg font-bold">сЃАсЃб</h2>
    <p class="text-gray-700"><%= simple_format(@seichi_memo.body) %></p>
	</div>

  <!-- УЂќтю░сЂ«ТЃЁта▒ -->
  <div class="border-t border-gray-300 p-4 space-y-2">
    <h2 class="text-lg font-bold mb-2">УЂќтю░ТЃЁта▒</h2>

    <div class="flex items-start space-x-3">
      <i class="fas fa-map text-primary text-lg w-6 text-center"></i>
      <span class="text-gray-700"><%= @seichi_memo.place.name %></span>
    </div>

    <div class="flex items-start space-x-3">
      <i class="fas fa-map-marker-alt text-primary text-lg w-6 text-center"></i>
      <span class="text-gray-700"><%= @seichi_memo.place.address.presence || "ТЃЁта▒сЂфсЂЌ" %></span>
    </div>

    <div class="flex items-start space-x-3">
      <i class="fas fa-envelope text-primary text-lg w-6 text-center"></i>
      <span class="text-gray-700"><%= @seichi_memo.place.postal_code.presence || "ТЃЁта▒сЂфсЂЌ" %></span>
    </div>
  </div>

  <!-- СйютЊЂТЃЁта▒ -->
  <div class="border-t border-gray-300 p-4">
    <h2 class="text-lg font-bold">СйютЊЂТЃЁта▒</h2>
    <p class="text-gray-700"><strong>СйютЊЂтљЇ:</strong> <%= @seichi_memo.anime.title %></p>
    <% if @seichi_memo.anime.official_site_url.present? %>
      <p class="text-blue-500 flex items-center space-x-1">
        <a href="<%= @seichi_memo.anime.official_site_url %>" target="_blank" class="hover:underline flex items-center space-x-1">
          <span>тЁгт╝ЈсѓхсѓцсЃѕ</span>
          <i class="fas fa-up-right-from-square text-sm"></i>
        </a>
      </p>
    <% else %>
      <p class="text-gray-700">тЁгт╝ЈсѓхсѓцсЃѕТЃЁта▒сЂфсЂЌ</p>
    <% end %>
    <div class="mt-4 flex justify-center">
      <%= image_tag (@seichi_memo.anime.image_url.present? ? @seichi_memo.anime.image_url.url : AnimeImageUploader.new.default_url), 
        alt: "СйютЊЂсѓцсЃАсЃ╝сѓИ", 
        class: "rounded-lg shadow-md w-2/3 object-cover" %>
    </div>
  </div>

  <!-- сѓ│сЃАсЃ│сЃѕсѓ╗сѓ»сѓисЃДсЃ│ -->
  <div class="border-t border-gray-300 p-4">
    <!-- сѓ│сЃАсЃ│сЃѕС╗ХТЋ░УАеуц║ -->
    <h2 id="comments_count" class="text-base text-black font-semibold mb-3"><%= @comments.count %>С╗ХсЂ«сѓ│сЃАсЃ│сЃѕ</h2>

    <!-- сЃЋсЃЕсЃЃсѓисЃЦсЃАсЃЃсѓ╗сЃ╝сѓИ -->
    <div id="flash" class="mb-5">
      <%= render "shared/flash_message_turbo" %>
    </div>

    <!-- сѓ│сЃАсЃ│сЃѕсЃЋсѓЕсЃ╝сЃа -->
    <%= render partial: "comments/form", locals: { seichi_memo: @seichi_memo, comment: @comment } %>

    <!-- сѓ│сЃАсЃ│сЃѕСИђУдД -->
    <%= render partial: "comments/comment", locals: { comments: @comments } %>
  </div>

  <!-- сЃюсѓ┐сЃ│сѓесЃфсѓб -->
  <div class="flex flex-col items-center space-y-4 mt-8">
  <%= link_to "сЂЊсЂЊсЂИУАїсЂЈ", "https://www.google.com/maps/search/?api=1&query=#{CGI.escape(@seichi_memo.place.name.to_s + ' ' + @seichi_memo.place.address.to_s)}", target: "_blank", class: "btn bg-primary hover:bg-primary-dark text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-200  w-full max-w-xs" %>
    <%= link_to "сЂ┐сѓЊсЂфсЂ«ТіЋуе┐сЂФТѕ╗сѓІ", seichi_memos_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-6 rounded-lg shadow-md transition duration-200 w-full max-w-xs text-center" %>
  </div>
</div>
