<div class="px-4 sm:px-6 lg:px-8">
  <!-- 🔹 ステップのタイトルと進捗バー -->
  <div class="my-8 space-y-2">
    <!-- タイトル -->
    <h2 class="text-2xl sm:text-3xl font-extrabold text-center text-transparent bg-clip-text bg-gradient-to-r from-primary to-pink-500 tracking-wide mb-4">
      ステップ 1/4：巡礼記録
    </h2>

    <!-- ステップインジケーター -->
    <div class="flex items-center justify-center space-x-2">
      <% ["巡礼記録", "聖地", "作品"].each_with_index do |label, i| %>
        <div class="<%= label == '巡礼記録' ? 'px-3 py-1 rounded-full border-2 border-primary text-primary text-xs font-semibold bg-white whitespace-nowrap' : 'px-3 py-1 rounded-full bg-primary text-white text-xs font-semibold whitespace-nowrap' %>">
          <%= label %>
        </div>
        <div class="w-6 h-1 bg-primary"></div>
      <% end %>

      <!-- 🔹確認画面（最後） -->
      <div class="px-3 py-1 rounded-full bg-primary text-white text-xs font-semibold whitespace-nowrap">
        確認画面
      </div>
    </div>
  </div>

  <!-- 🔹 聖地メモのタイトル -->
  <div class="mt-4">
    <label class="block text-gray-700 font-semibold mb-1">タイトル <span class="text-red-500">*</span></label>
    <%= f.text_field :title, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "巡礼記録のタイトルを入力してください" %>
  </div>

  <!-- 🔹メモ -->
  <div class="mt-2">
    <label class="block text-gray-700 font-semibold mb-1">メモ <span class="text-red-500">*</span></label>
    <%= f.text_area :body, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "シーンの解説や撮影スポットの詳細、ベストな訪問時間など" %>
  </div>

  <!-- 🔹 画像アップロード -->
  <div class="mt-4">
    <label class="block text-gray-700 font-semibold mb-1">聖地の写真</label>
    <%= f.file_field :seichi_photo, class: "btn w-full p-2 border cursor-pointer shadow-sm" %>
  </div>

  <div class="mt-4">
    <label class="block text-gray-700 font-semibold mb-1">聖地が登場したシーン画像</label>
    <%= f.file_field :scene_image, class: "btn w-full p-2 border cursor-pointer shadow-sm" %>
  </div>

  <!-- 🔹 ステップボタン -->
  <div class="flex justify-center mt-4">
    <button type="button" class="btn bg-primary text-white py-2 px-6 shadow-md transition duration-200 w-auto mt-2" data-action="click->step-form#next">次のステップへ</button>
  </div>
</div>
